<%= form_with(model: song, local: true) do |form| %>
  <% if song.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(song.errors.count, "error") %> prohibited this song from being saved:</h2>

      <ul>
      <% song.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group" style="max-width: 400px">
    <h5>artist</h5>
    <%= form.text_field :artist, class: "form-control input-lg" %>
  </div>

  <div class="form-group" style="max-width:400px">
    <h5>title</h5>
    <%= form.text_field :title, class: "form-control input-lg" %>
  </div>

  <div class="form-group" style="max-width: 400px">
    <h5>genre</h5>
    <%= form.select :genre, [
                            ["pop", "pop"],
                            ["hip hop", "hip hop"],
                            ["rap", "rap"],
                            ["pop rock", "pop rock"],
                            ["classical", "classical"]
                            ], prompt: "select genre...", id: :song_genre %>
  </div>

  <div class="form-group" style="max-width: 400px">
    <h5>Youtube ID (example: ztIEogFr9j4)</h5>
    <%= form.text_field :link, class: "form-control input-lg" %>
  </div>

   <div class="form-group">
    <%= form.submit 'Post Song', class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
